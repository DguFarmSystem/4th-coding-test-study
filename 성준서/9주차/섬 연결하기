#include <string>
#include <vector>
#include <iostream>
#include <algorithm>

using namespace std;

int solution(int n, vector<vector<int>> numbers) {
    int answer = 0;
    
    vector<int> parent(n);
    
    for (int i = 0; i < n; i++) {
        parent[i] = i;
    }

    sort(numbers.begin(), numbers.end(), [](vector<int>& a, vector<int>& b) {
        return a[2] < b[2];
    });

    for (auto& bridge : numbers) {
        int land1 = bridge[0];
        int land2 = bridge[1];
        int cost = bridge[2];

        int root1 = land1;
        int root2 = land2;

        while (parent[root1] != root1) {
            root1 = parent[root1];
        }

        while (parent[root2] != root2) {
            root2 = parent[root2];
        }

        if (root1 != root2) {
            parent[root2] = root1;
            answer += cost;
        }
    }
    
    return answer;
}
